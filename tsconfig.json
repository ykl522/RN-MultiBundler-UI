{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "buz.config.js",
    "buz-ui.config.js",
    "metro.config.js",
    "platform.config.js",
    "platform-ui.config.js",
    "metro.config.js",
  ],
  "include": [
    "src/**/*"
  ]
}